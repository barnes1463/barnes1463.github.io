---
layout: rss
---

{% for post in site.posts %}
  <item>
    <title>{{ post.title }}</title>
    <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
    <link>
      {{ site.baseurl }}{{ post.url }}
    </link>
    <guid isPermaLink="true">
      {{ site.baseurl }}{{ post.url }}
    </guid>
    <description>
      <![CDATA[
               site.baseurl = {{ site.baseurl }}
               {{ post.content | markdownify }}
      ]]>
    </description>
  </item>
{% endfor %}
